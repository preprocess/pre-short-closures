{
    "type": "pre-macro",
    "name": "pre/short-closures",
    "license": "MIT",
    "require": {
        "pre/plugin": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0|^6.0"
    },
    "extra": {
        "macros": [
            "source/macros.yay"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "../pre-plugin",
            "options": {
                "symlink": false
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "refresh-dependencies": "rm -rf composer.lock vendor && composer install"
    }
}
